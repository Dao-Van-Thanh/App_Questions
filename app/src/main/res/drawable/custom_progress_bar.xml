<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vùng tiến trình đã hoàn thành -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Màu nền của tiến trình chưa hoàn thành -->
        </shape>
    </item>
    <!-- Vùng tiến trình đã hoàn thành -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#8BC34A" /> <!-- Màu tiến trình đã hoàn thành -->
            </shape>
        </clip>
    </item>
</layer-list>
